  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "echo 'Running tests...' && nyc mocha --timeout 500000 --reporter mochawesome --reporter-options reportDir=./reports,reportFilename=report || echo 'Tests failed'",
    "report": "live-server reports --port=8080 --entry-file=report.html",
    "prod": "npm run test && concurrently --kill-others \"npm run report\" \"npm run start\"",
    "dev": "cross-env NODE_ENV=dev nodemon src/index.ts",
    "dev --docker": "cross-env NODE_ENV=dev DOCKER=true nodemon src/index.ts",
    "build": "npx prettier --write . && tsc"
